void setupPlayers() {
    printf("Enter the number of players (2 to 6): ");
    scanf("%d", &numberOfPlayers);
    while (numberOfPlayers < 2 || numberOfPlayers > 6) {
        printf("Invalid number of players, please enter a number between 2 and 6: ");
        scanf("%d", &numberOfPlayers);
    }
    for (int i = 0; i < numberOfPlayers; i++) {
        printf("Enter name for player %d: ", i + 1);
        scanf("%s", players[i].name);
        players[i].score = 0;
        // Set number of penguins based on the number of players
        if (numberOfPlayers == 2) players[i].penguins = 4;
        else if (numberOfPlayers == 3) players[i].penguins = 3;
        else players[i].penguins = 2;
    }
}



//      version plus securisÃ© avec l'aide de youtube et internet :


#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void setupPlayers() {
    char input[100];  // Buffer for reading input

    printf("Enter the number of players (2 to 6): ");
    fgets(input, sizeof(input), stdin);  // Read the line as string
    numberOfPlayers = atoi(input);  // Convert string to integer

    while (numberOfPlayers < 2 || numberOfPlayers > 6) {
        printf("Invalid number of players, please enter a number between 2 and 6: ");
        fgets(input, sizeof(input), stdin);
        numberOfPlayers = atoi(input);
    }

    for (int i = 0; i < numberOfPlayers; i++) {
        printf("Enter name for player %d: ", i + 1);
        fgets(players[i].name, sizeof(players[i].name), stdin);
        // Remove newline character if present
        players[i].name[strcspn(players[i].name, "\n")] = 0;
        players[i].score = 0;

        // Set number of penguins based on the number of players
        if (numberOfPlayers == 2) players[i].penguins = 4;
        else if (numberOfPlayers == 3) players[i].penguins = 3;
        else players[i].penguins = 2;
    }
}
