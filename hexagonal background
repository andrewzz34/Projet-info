#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define MAX_ROWS 9
#define MAX_COLS 9



// Fonction pour afficher une ligne d'hexagones
void printHexagonLine(int num_hexagons) {

    printf("\n");

    for (int i = 0; i < num_hexagons; i++) {
        printf(" /      \\ ");
        printf("      ");
    }
    printf("\n");
    for (int i = 0; i < 1; i++) {
        for (int j = 0; j < num_hexagons-1; j++) {
        printf("/        \\");
        printf("______");  
        }
        printf("/        \\");
    }
    printf("\n");
    for (int i = 0; i < num_hexagons; i++) {
        printf("\\        /");
        printf("      ");
    }
    printf("\n");
    for (int i = 0; i < num_hexagons; i++) {
        printf(" \\______/ ");
        printf("      ");
    }

}

// Fonction pour afficher la zone de jeu hexagonale avec les noms et scores des joueurs
void printGameBoard(int rows, int cols, char *player_names[], int num_players) {
    // Affichage des noms et scores des joueurs
    printf("Joueurs :\n");
    for (int i = 0; i < num_players; i++) {
        printf("Joueur %d : %s\n", i + 1, player_names[i]);
    }
    printf("\n");

    // Affichage de la zone de jeu
    for (int i = 0; i < cols; i++) {
        printf("  ______  ");
        printf("      ");
    }

    for (int i = 0; i < rows; i++) {
        printHexagonLine(cols);
    }

    // Affichage du nombre de poissons sur chaque case

}
int main() {
    int num_players;
    char *player_names[6];
    int rows, cols;
    

    // Demande du nombre de joueurs
    printf("Nombre de joueurs (entre 2 et 6) : ");
    scanf("%d", &num_players);

    // Vérification de la validité du nombre de joueurs
    if (num_players < 2 || num_players > 6) {
        printf("Nombre de joueurs invalide. Veuillez entrer un nombre entre 2 et 6.\n");
        return 1;
    }

    // Demande des noms des joueurs
    for (int i = 0; i < num_players; i++) {
        player_names[i] = (char *)malloc(50 * sizeof(char));
        printf("Nom du joueur %d : ", i + 1);
        scanf("%s", player_names[i]);
    }

    // Fixation de la taille du plateau de jeu
    printf("Nombre de lignes du plateau de jeu : ");
    scanf("%d", &rows);
    printf("Nombre de colonnes du plateau de jeu : ");
    scanf("%d", &cols);

    // Vérification de la validité de la taille du plateau de jeu
    if (rows < 1 || cols < 1 || rows > MAX_ROWS || cols > MAX_COLS) {
        printf("Taille du plateau invalide. Veuillez choisir des dimensions entre 1 et 9.\n");
        return 1;
    }

    // Affichage de la zone de jeu
    printGameBoard(rows, cols, player_names, num_players);

    // Libération de la mémoire allouée pour les noms des joueurs
    for (int i = 0; i < num_players; i++) {
        free(player_names[i]);
    }

    return 0;
}
