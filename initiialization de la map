void initializeBoard(int size) {
    srand(time(NULL));
    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            board[i][j].fish = rand() % 3 + 1; \\ car on veut le nombre de poisson dans chaque hexagone que ca soit entre 1 et 3
            board[i][j].player = -1; \\ indique que l'hexagone est vide, que ca ne contient pas de joueur dessus.
        }
    }
}
