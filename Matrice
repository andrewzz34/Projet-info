#include <stdio.h>
#define MAX_ELEMENTS 8  // Nombre total d'éléments à afficher

int main() {
    int numbers[MAX_ELEMENTS] = {1, 2, 3, 4, 5, 6, 7, 8};  // Initialisation du tableau
    int index = 0;  // Index pour suivre la position actuelle dans le tableau

    // Boucle à travers chaque élément du tableau en utilisant l'index pour contrôler l'accès
    for (int i = 0; i < MAX_ELEMENTS; i++) {
        if (index < MAX_ELEMENTS) {
            if (i % 2 == 0 && index < MAX_ELEMENTS - 1) {
                // Pour les lignes paires (dans l'indexation 0), affichez deux éléments
                printf("%d   %d\n", numbers[index], numbers[index + 1]);
                index += 2;  // Incrémentez l'index de 2 pour les prochains éléments
            } else {
                // Pour les lignes impaires, affichez un seul élément centré
                printf("  %d\n", numbers[index]);
                index += 1;  // Incrémentez l'index de 1 pour le prochain élément
            }
        }
    }

    return 0;
}
