#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <time.h>

#define MAX_PLAYERS 6
#define MIN_SIZE 9

typedef struct {
    int fish;  
    int player;  
} Tile;

typedef struct {
    char name[50];
    int score;
    int penguins; 
} Player;

Tile board[MIN_SIZE][MIN_SIZE];
Player players[MAX_PLAYERS];
int numberOfPlayers;
